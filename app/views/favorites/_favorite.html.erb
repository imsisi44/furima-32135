
<% if current_user.favorites.find_by(item_id: item.id) %>
  <%= link_to item_favorites_path(item.id), method: :delete, remote: true, id: "favorite-btn" do %>
    <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
    <span class=like-on><%= "お気に入り#{item.favorites.count}" %></span>
  <% end %>
<% else %>
  <%= link_to item_favorites_path(item.id), method: :post, remote: true, id: "favorite-btn" do %>
    <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
    <span class=like-off><%= "お気に入り#{item.favorites.count}" %></span>
  <% end %>
<% end %>